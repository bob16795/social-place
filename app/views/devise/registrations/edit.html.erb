<h1>MY ACCOUNT</h1>

<h2>LINKS</h2>

<div class="box">
  <%= link_to('LOGOUT', destroy_user_session_path, :method => :delete) %><br />
  <a href="/user/<%= current_user.username %>">MY PROFILE</a><br />
  <%= link_to "DELETE MY ACCOUNT", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
</div>

<h2>EDIT</h2>

<div class="box">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %><br />

    <%= f.label :password %>:
    <%= f.password_field :password, autocomplete: "new-password" %><br />

    <%= f.label :password_confirmation %>:
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br />

    <%= f.label :current_password %>:
    <%= f.password_field :current_password, autocomplete: "current-password" %><br />

    <%= f.submit "Update" %>
  <% end %>
</div>
